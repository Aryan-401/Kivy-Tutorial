ScrollViewExample:

<StackLayoutExample>


<ScrollViewExample@ScrollView>
    StackLayoutExample:
        size_hint: 1,None
        height: self.minimum_height


<GridLayoutExample@GridLayout>
    rows: 2
    Button:
        text: 'A'
        size_hint: None, 1  # Wont work if D also doesnt have same size_hint
        width: "60dp"
    BoxLayoutExample:
    Button:
        text: 'C'
    Button:
        text: 'D'
        size_hint: None, 1
        width: "60dp"
    Button:
        text: 'E'
    Button:
        text: 'F'

<AnchorLayoutExample>
    #right, left, center
    anchor_x: 'left'
    #bottom top center
    anchor_y: 'top'
    BoxLayout:
        size_hint: (0.2,0.3)
        Button:
            text: "A"

        Button:
            text: "B"


<BoxLayoutExample>

    Button:
        text: 'A'
        size: ('200dp', '200dp') # ignores size property of parent
        size_hint: (.8, None) # default (1,1)
        pos_hint: {'center_y': 0.5} # x, center_x, right || y, center_y, bottom

    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        Button:
            text: 'A'

        Button:
            text: 'B'

        Button:
            text: 'C'

    Button:
        size_hint: (1, None)
        height: '60dp'
        text: 'C'